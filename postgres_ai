#!/bin/bash

# Postgres AI CLI
# A CLI tool for managing the PostgreSQL monitoring system with Docker Compose

set -e

# Configuration
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_NAME="postgres-ai-mon"
COMPOSE_FILE="$SCRIPT_DIR/docker-compose.yml"
PYTHON_REQUIREMENTS="$SCRIPT_DIR/requirements.txt"
INSTANCES_FILE="$SCRIPT_DIR/instances.yml"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging functions
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Print banner
print_banner() {
    echo -e "${BLUE}"
    echo "=================================="
    echo "  Postgres AI CLI"
    echo "=================================="
    echo -e "${NC}"
}

