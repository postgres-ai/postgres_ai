{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "H003 report schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["checkId", "checkTitle", "timestamptz", "nodes", "results"],
  "properties": {
    "version": { "type": ["string", "null"] },
    "build_ts": { "type": ["string", "null"] },
    "checkId": { "const": "H003" },
    "checkTitle": { "const": "Non-indexed foreign keys" },
    "timestamptz": { "type": "string" },
    "nodes": { "$ref": "#/$defs/nodes" },
    "results": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "$ref": "#/$defs/nodeResult" }
    }
  },
  "$defs": {
    "nodes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["primary", "standbys"],
      "properties": {
        "primary": { "type": "string" },
        "standbys": { "type": "array", "items": { "type": "string" } }
      }
    },
    "postgresVersion": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "server_version_num", "server_major_ver", "server_minor_ver"],
      "properties": {
        "version": { "type": "string" },
        "server_version_num": { "type": "string" },
        "server_major_ver": { "type": "string" },
        "server_minor_ver": { "type": "string" }
      }
    },
    "nonIndexedForeignKey": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "schema_name",
        "table_name",
        "fk_name",
        "fk_definition",
        "table_size_bytes",
        "table_size_pretty",
        "referenced_table"
      ],
      "properties": {
        "schema_name": { "type": "string" },
        "table_name": { "type": "string" },
        "fk_name": { "type": "string" },
        "fk_definition": { "type": "string" },
        "table_size_bytes": { "type": "number" },
        "table_size_pretty": { "type": "string" },
        "referenced_table": { "type": "string" }
      }
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": ["non_indexed_fks", "total_count"],
      "properties": {
        "non_indexed_fks": { "type": "array", "items": { "$ref": "#/$defs/nonIndexedForeignKey" } },
        "total_count": { "type": "integer" }
      }
    },
    "nodeResult": {
      "type": "object",
      "additionalProperties": false,
      "required": ["data"],
      "properties": {
        "data": { "$ref": "#/$defs/data" },
        "postgres_version": { "$ref": "#/$defs/postgresVersion" }
      }
    }
  }
}

