# postgres_ai monitoring environment configuration
# Copy this file to .env and configure with your actual values
# NEVER commit .env to version control

# =============================================================================
# Postgres configuration (target database)
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=postgres

# =============================================================================
# Grafana Configuration
# =============================================================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme_admin_password
GF_SECURITY_ADMIN_EMAIL=admin@localhost

# =============================================================================
# PostgresAI Platform API Configuration
# Only required if using PostgresAI platform features
# =============================================================================
POSTGRES_AI_API_KEY=your_api_key_here
POSTGRES_AI_PROJECT=your_project_name

# =============================================================================
# Flask Backend Configuration
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=false
PROMETHEUS_URL=http://sink-prometheus:9090

# API Security
API_KEYS=key1,key2,key3
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# Monitoring User Configuration - Sink Database
# User for storing metrics in the sink-postgres database
# =============================================================================
PGWATCH_MONITOR_USER=pgwatch
PGWATCH_MONITOR_PASSWORD=changeme_pgwatch_password

# =============================================================================
# Monitoring User Configuration - Target Database
# User for collecting metrics from the target database
# =============================================================================
TARGET_MONITOR_USER=monitor
TARGET_MONITOR_PASSWORD=changeme_monitor_password

# =============================================================================
# Postgres sink database configuration
# Used for storing query texts and metadata
# =============================================================================
SINK_POSTGRES_USER=postgres
SINK_POSTGRES_PASSWORD=changeme_sink_password
SINK_POSTGRES_DB=postgres

# =============================================================================
# Optional: Custom Port Mappings
# =============================================================================
# GRAFANA_PORT=3000
# PROMETHEUS_PORT=9090
# FLASK_API_PORT=55000
# TARGET_DB_PORT=5432